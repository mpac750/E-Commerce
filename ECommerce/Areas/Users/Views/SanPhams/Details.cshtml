@model SanPham
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Users/Views/_Layout.cshtml";
}


<div id="page-content" class="single-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a asp-action="Index" asp-controller="Product">Trang Chủ</a></li>
                    <li><a>@Model.Loai.TenLoai</a></li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div id="main-content" class="col-md-8">
                <div class="product">
                    <div class="col-md-6">
                        <div class="image">
                            <img src="~/image/@Model.HinhAnh" />

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="caption">
                            <div class="name"><h3>@Model.TenSP</h3></div>
                            <div class="info">
                                <ul>
                                    <li>Thương hiệu: @Model.Loai.TenLoai</li>

                                </ul>
                            </div>
                            <div class="price">@Model.DonGia</div>
                            <div class="options">
                                Lựa Chọn màu sắc
                                <select>
                                    <option value="" selected>Mời Chọn Màu</option>
                                    <option value="red">Đỏ</option>
                                    <option value="black">Đen</option>
                                </select>
                            </div>
                            <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                            <div class="well"><label>Số Lượng: </label> <input class="form-inline quantity" type="text" value="1"><a asp-controller="Cart" asp-action="Buy" asp-route-id="@Model.MaSP" class="btn btn-2 ">Thêm Vào Giỏ</a></div>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="product-desc">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#">Thông Tin Chi Tiết Sản Phẩm</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="description" class="tab-pane fade in active">
                            <h4>@Model.TenSP</h4>
                            <p>
                                @Model.ChiTietSP
                            </p>
                            <img src="~/image/@Model.HinhAnh" />

                        </div>
                    </div>
                </div>
            </div>
            <div id="sidebar" class="col-md-4">
                <div class="widget wid-categories">
                    <div class="heading"><h4>Danh Mục</h4></div>
                    <div class="content">
                        <ul>
                            <li><a href="#">PC Computers</a></li>
                            <li><a href="#">Laptops & Notebooks</a></li>
                            <li><a href="#">Mobiles & Tablet</a></li>
                            <li><a href="#">Software</a></li>
                        </ul>
                    </div>
                </div>
                <div class="widget wid-discouts">
                    <div class="heading"><h4>Theo Giá</h4></div>
                    <div class="content">
                        <label class="checkbox"><input type="checkbox" name="discount" checked="">Từ 1,000,000đ--->2,000,000đ</label>
                        <label class="checkbox"><input type="checkbox" name="discount" checked="">Từ 2,000,000đ--->5,000,000đ</label>
                        <label class="checkbox"><input type="checkbox" name="discount" checked="">Từ 5,000,000đ--->10,000,000đ</label>
                        <label class="checkbox"><input type="checkbox" name="discount" checked="">Từ 10,000,000đ--->15,000,000đ</label>
                        <label class="checkbox"><input type="checkbox" name="discount" checked="">Từ 15,000,000đ--->20,000,000đ</label>
                    </div>
                </div>
                <div class="widget wid-brand">
                    <div class="heading"><h4>Theo Thương Hiệu</h4></div>
                    <div class="content">
                        <label class="checkbox"><input type="checkbox" name="brand">Nokia</label>
                        <label class="checkbox"><input type="checkbox" name="brand">Samsung</label>
                        <label class="checkbox"><input type="checkbox" name="brand">Iphone</label>
                        <label class="checkbox"><input type="checkbox" name="brand">HTC</label>
                        <label class="checkbox"><input type="checkbox" name="brand">Oppo</label>
                        <label class="checkbox"><input type="checkbox" name="brand">Kings</label>
                        <label class="checkbox"><input type="checkbox" name="brand">Zumba</label>
                    </div>
                </div>
                <div class="widget wid-product">
                    <div class="heading"><h4>Sản Phẩm Tương Tự</h4></div>
                    <div class="content">
                        <div class="product">
                            <a href="#"><img src="~/User/images/galaxy-note.jpg" /></a>
                            <div class="wrapper">
                                <h5><a href="#">Samsung Galaxy Note 2</a></h5>
                                <div class="price">6,000,000đ</div>
                                <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                            </div>
                        </div>
                        <div class="product">
                            <a href="#"><img src="~/User/images/galaxy-s4.jpg" /></a>
                            <div class="wrapper">
                                <h5><a href="#">Samsung Galaxy S3</a></h5>
                                <div class="price">5,000,000đ</div>
                                <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                            </div>
                        </div>
                        <div class="product">
                            <a href="#"><img src="~/User/images/Z1.png" /></a>
                            <div class="wrapper">
                                <h5><a href="#">Sony Z</a></h5>
                                <div class="price">8,000,000đ</div>
                                <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Product">Back to List</a>
</div>